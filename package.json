{
  "name": "sbot",
  "version": "0.2.0",
  "description": "Simple, consistent and customizable Slack bot API",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha test --compilers js:babel/register -w",
    "test:single": "istanbul cover -x test _mocha -- test --compilers js:babel/register",
    "test:file": "mocha --compilers js:babel/register",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "check-coverage": "istanbul check-coverage --statements 90 --branches 90 --functions 90 --lines 90",
    "report-coverage": "cat ./coverage/lcov.info | codecov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mdibaiee/sbot"
  },
  "keywords": [],
  "author": "Mahdi Dibaiee",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mdibaiee/sbot/issues"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    }
  },
  "files": [
    "src"
  ],
  "directories": {
    "lib": "src"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "homepage": "https://github.com/mdibaiee/",
  "dependencies": {
    "bluebird": "2.10.2",
    "redis": "2.2.5",
    "unirest": "0.4.2",
    "ws": "0.8.0"
  },
  "devDependencies": {
    "chai": "^3.3.0",
    "codecov.io": "^0.1.6",
    "express": "4.13.3",
    "ghooks": "^0.3.2",
    "istanbul": "^0.3.22",
    "mocha": "^2.3.3",
    "semantic-release": "^4.3.5",
    "sinon": "1.17.2"
  }
}
